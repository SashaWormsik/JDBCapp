<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>UserInitialServlet</servlet-name>
        <servlet-class>org.sashaworms.pvt.UserInitialServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddUser</servlet-name>
        <servlet-class>org.sashaworms.pvt.UserAddServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteUser</servlet-name>
        <servlet-class>org.sashaworms.pvt.UserDeleteServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EditUser</servlet-name>
        <servlet-class>org.sashaworms.pvt.UserEditServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeptInitServlet</servlet-name>
        <servlet-class>org.sashaworms.pvt.DeptInitServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddDept</servlet-name>
        <servlet-class>org.sashaworms.pvt.DeptAddServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteDept</servlet-name>
        <servlet-class>org.sashaworms.pvt.DeptDeleteServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EditDept</servlet-name>
        <servlet-class>org.sashaworms.pvt.DeptEditServlet</servlet-class>
    </servlet>





    <servlet-mapping>
        <servlet-name>UserInitialServlet</servlet-name>
        <url-pattern>/tableUser</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/userAdd</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteUser</servlet-name>
        <url-pattern>/userDelete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EditUser</servlet-name>
        <url-pattern>/userEdit</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeptInitServlet</servlet-name>
        <url-pattern>/tableDepartment</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddDept</servlet-name>
        <url-pattern>/deptAdd</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteDept</servlet-name>
        <url-pattern>/deptDelete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EditDept</servlet-name>
        <url-pattern>/deptEdit</url-pattern>
    </servlet-mapping>

</web-app>
